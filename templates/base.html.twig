                <a class="navbar-brand" href="{{ path('app_dashboard') }}"><img src="../img/logo.png" style="height: 80px"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('MiPerfil') }}">Mi Perfil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('crear_post') }}">Crear Post</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_crud_index') }}">Editar</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                        </li>
                    </ul>
                    <p class="nav-link" style="float: right">
                    Hola {{ app.user.name_user }}</p>
                </div>
            </nav>
        {% endblock %}
