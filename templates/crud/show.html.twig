{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ post.picture }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ post.likes }}</td>
            </tr>
            <tr>
                <th>Date_post</th>
                <td>{{ post.datePost ? post.datePost|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_crud_index') }}">back to list</a>

    <a href="{{ path('app_crud_edit', {'id': post.id}) }}">edit</a>

    {{ include('crud/_delete_form.html.twig') }}
{% endblock %}
