{% extends 'base.html.twig' %}

{% block title %}
    {{parent()}} 
{% endblock %}

{% block body %}
    {{parent()}} 

    <div class="container">
        <div class="row" style="justify-content: center; margin-top: 20px">
            <div class="col-md-6">
                {% for post in pagination %}
                <div class="bg-white rounded p-3 my-3"  onclick="window.location.href='{{ path('VerPost',{id:post.id}) }}'">
                    <div class="d-flex bd-highlight">
                        <div class="p-2 flex-grow-1 bd-highlight">
                        <div class="bg-yellow"> <i class="fa fa-user" style="margin-left:15px"></i><strong> {{post.name_user}}</strong></div>
                        <div class="p-2 bd-highlight">
                            <div class="align-self-center">
                                <img class="rounded" src="{{ asset('uploads/photos/'~post.picture) }}" width="470px">
                            </div>
                        </div>
                            <h4 style="margin-left: 10px">{{post.content}}</h4>
                            
                            <div class=" bg-green" style="margin-left: 10px"><i class="far fa-clock"></i> <strong>{{ post.date_post | date }}</strong></div>
                        </div>
                        
                    </div>
                </div>
                {% endfor %}
            </div>
            
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}

