{% extends 'base.html.twig' %}
{% block title %}{{parent()}} - ver post {% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container bg-white rounded my-3 p-4" >
        <div class="d-flex bd-highlight">
            <div class="p-2 flex-grow-1 bd-highlight">
                <h3>{{post.user.name_user}} - Post </h3>
                <div class="my-3" style="color:#3282b8;">
                  <i class="fa fa-thumbs-up"></i><strong>
                </div>
                <div style="color:#5957a1;"> 
                    <i class="far fa-clock"></i> <strong>Fecha: {{ post.datePost | date }}</strong>
                </div>
            </div>
        <hr>
        <div class="text-justify my-3">
            Comentario: {{ post.content }}
        </div>
                        <div class="p-2 bd-highlight">
                  <div class="align-self-center">
                    <img class="rounded" src="{{ asset('uploads/photos/'~post.picture) }}" width="750px">
                  </div>
                </div>
      </div>
{% endblock %}